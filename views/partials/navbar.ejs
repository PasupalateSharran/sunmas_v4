    <script>
        // Function to set the clicked menu item as the active item
        function setActiveMenuItem(route) {
          const menuItems = document.querySelectorAll('#navbar a');
      
          menuItems.forEach(item => {
            if (item.getAttribute('href') === route) {
              item.parentElement.classList.add('current', 'megamenu');
            } else {
              item.parentElement.classList.remove('current', 'megamenu');
            }
          });
        }
      
        // Set the default active menu item based on the saved route or Home
        window.onload = function () {
          const savedRoute = localStorage.getItem('activeRoute') || '/index';
          setActiveMenuItem(savedRoute);
        };
      
        // Attach the onClick event to each menu item
        document.querySelectorAll('#navbar a').forEach(item => {
          item.addEventListener('click', function (event) {
            event.preventDefault(); // Prevent default link behavior
            const route = this.getAttribute('href');
            localStorage.setItem('activeRoute', route); // Save the clicked route to localStorage
            setActiveMenuItem(route);
            window.location.href = route; // Redirect to the clicked page
          });
        });
      </script>
      
      